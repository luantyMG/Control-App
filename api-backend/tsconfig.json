{
  "compilerOptions": {
    "target": "es2016",                    // Buen target para Node moderno
    "module": "commonjs",                  // Necesario para Node.js
    "outDir": "./dist",                    // Carpeta para JS compilado (perfecto)
    "rootDir": "./src",                    // Raíz de código fuente TS (correcto)
    "esModuleInterop": true,               // Facilita importar módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Evita problemas de mayúsculas/minúsculas
    "strict": true,                        // Activa chequeos estrictos (muy recomendado)
    "skipLibCheck": true,                  // Ignora chequeo de tipos en node_modules (reduce errores)
    "resolveJsonModule": true              // Permite importar archivos JSON (útil)
  },
  "include": ["src"],                      // Solo compila TS dentro de src
  "exclude": ["node_modules", "dist"]     // Ignora estas carpetas
}