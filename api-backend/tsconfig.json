{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",                 // Carpeta donde se guardará JS compilado
    "rootDir": "./src",                // Carpeta raíz del código fuente TS
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true          // Útil si importas JSON
  },
  "include": ["src"],                  // Solo compila código dentro de src
  "exclude": ["node_modules", "dist"] // Ignora node_modules y dist
}
